generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  resident
}

enum Gender {
  male
  female
}

model User {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  fullname    String
  username    String
  email       String     @unique
  password    String
  apartNumber String     @default("Unknown")
  phone       String?
  role        Role
  dob         DateTime
  gender      Gender
  isVerified  Boolean
  permissions String[]
  isActive    Boolean
  createdAt   DateTime   @default(now())
  feedbacks   Feedback[]
}

model Feedback {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  content     String
  apartNumber String   @default("Unknown")
  userId      String   @db.ObjectId 
  user        User     @relation(fields: [userId], references: [id])
  imageUrl    String? 
  status      String   @default("pending")
  createdAt   DateTime @default(now())
}
