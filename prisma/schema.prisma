generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  email     String     @unique
  password  String      
  role      String
  createdAt DateTime   @default(now())
  feedbacks Feedback[]
}

model Feedback {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  userId    String   @db.ObjectId 
  user      User     @relation(fields: [userId], references: [id])
  imageUrl  String? 
  createdAt DateTime @default(now())
}
